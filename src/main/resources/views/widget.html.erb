<% score=measure('score') %>
<% htmlSize=measure('html-size') %>

<div class="dashbox">
    <style>
      .dashbox-label {
        width: 100px;
        display: inline-block;
      }

      .dashbox-value {
        display: inline-block;
      }
    </style>
    <h3>
        PageSpeed Insights (PSI)
    </h3>

    <div>
        <div class="dashbox-label">Score:</div>
        <div class="dashbox-value">
            <span class="big"><%= format_measure(score) -%></span> / 100 <%= trend_icon(score) %>
        </div>
    </div>

    <div>
        <div class="dashbox-label">HTML size:</div>
        <div class="dashbox-value">
            <span class="big"><%= format_measure(htmlSize) -%></span> kB <%= trend_icon(htmlSize) %>
        </div>
    </div>
</div>
